---
import NewWindowLink from "./NewWindowLink.astro";
import CopyStr from "./CopyStr.astro";

const FOOTER_LINK_CLASS =
    "[border-bottom-width:var(--link-underline-thickness)] border-transparent hover:border-current hover:text-(--color-accent-light) dark:hover:text-(--color-accent-dark)";
const FOOTER_TRAILING_LINK_CLASS =
    "hover:text-(--color-accent-light) dark:hover:text-(--color-accent-dark) [&>span]:[border-bottom-width:var(--link-underline-thickness)] [&>span]:border-transparent hover:[&>span]:border-current";
---

<footer
    class="border-t border-(--color-divider) dark:border-(--color-divider-dark)"
>
    <nav
        aria-label="Footer navigation"
        class="grid w-full grid-cols-[repeat(4,max-content)] justify-between gap-x-10 px-content-inset pt-10 pb-30 text-base text-(--color-text-second) dark:text-(--color-text-second-dark)"
    >
        <div class="space-y-4">
            <div class="font-semibold">Navigation</div>
            <ul class="space-y-2">
                <li>
                    <a href="/" class={FOOTER_LINK_CLASS}>Home</a>
                </li>
                <li>
                    <a href="/writing" class={FOOTER_LINK_CLASS}>Writing</a>
                </li>
                <li>
                    <a href="/project" class={FOOTER_LINK_CLASS}>Projects</a>
                </li>
                <li>
                    <a href="/about" class={FOOTER_LINK_CLASS}>About</a>
                </li>
            </ul>
        </div>

        <div class="space-y-4">
            <div class="font-semibold">Site Info</div>
            <ul class="space-y-2">
                <li>
                    <a href="/license" class={FOOTER_LINK_CLASS}>License</a>
                </li>
                <li>
                    <a href="/privacy" class={FOOTER_LINK_CLASS}
                        >Privacy policy</a
                    >
                </li>
                <li>
                    <a href="/cookie" class={FOOTER_LINK_CLASS}>Cookie policy</a
                    >
                </li>
                <li>
                    <!-- prettier-ignore -->
                    <NewWindowLink
                        href="https://github.com/koichincom/website"
                        class={FOOTER_TRAILING_LINK_CLASS}
                        ><!--
                        -->Source Code<!--
                    --></NewWindowLink>
                </li>
            </ul>
        </div>

        <div class="space-y-4">
            <div class="font-semibold">Social</div>
            <ul class="space-y-2">
                <li>
                    <!-- prettier-ignore -->
                    <NewWindowLink
                        href="https://x.com/koichincom"
                        class={FOOTER_TRAILING_LINK_CLASS}
                        ><!--
                        -->X/Twitter<!--
                    --></NewWindowLink>
                </li>
                <li>
                    <!-- prettier-ignore -->
                    <NewWindowLink
                        href="https://github.com/koichincom"
                        class={FOOTER_TRAILING_LINK_CLASS}
                        ><!--
                        -->GitHub<!--
                    --></NewWindowLink>
                </li>
                <li>
                    <!-- prettier-ignore -->
                    <NewWindowLink
                        href="https://linkedin.com/in/koichincom/"
                        class={FOOTER_TRAILING_LINK_CLASS}
                        ><!--
                        -->LinkedIn<!--
                    --></NewWindowLink>
                </li>
                <li>
                    <a href="/feed" class={FOOTER_LINK_CLASS}>Atom feed</a>
                </li>
            </ul>
        </div>

        <div class="space-y-4">
            <div class="font-semibold">Contact</div>
            <ul class="space-y-2">
                <li>
                    <!-- prettier-ignore -->
                    <CopyStr
                        copyValue="k@koichin.com"
                        class={FOOTER_TRAILING_LINK_CLASS}
                        ><!--
                        -->Email<!--
                    --></CopyStr>
                </li>
                <li>
                    <!-- prettier-ignore -->
                    <NewWindowLink
                        href="https://signal.me/#eu/hFxJqhdUe_9zSwQs01xjuf6sz9n5Zag3yfHQzxGwPZPL-X863I9DF5QXch7gCsUv"
                        class={FOOTER_TRAILING_LINK_CLASS}
                        ><!--
                        -->Signal<!--
                    --></NewWindowLink>
                </li>
            </ul>
        </div>
    </nav>
</footer>
