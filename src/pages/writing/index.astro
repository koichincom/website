---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/base.astro";
import { getReadingTime, formatReadingTime } from "../../utils/readingTime";
const title = "Koichi's Writing";
const h1 = "Writing";

const writingPosts = (await getCollection("writing")).sort(
    (a, b) => new Date(b.data.published).getTime() - new Date(a.data.published).getTime(),
);

// Calculate reading times from markdown body
const postsWithReadingTime = writingPosts.map((post) => {
    const readingTime = getReadingTime(post.body || "");
    return { post, readingTime };
});
---

<BaseLayout title={title} h1={h1}>
    <div class="max-w-4xl">
    <ul class="mb-4">
        {
            postsWithReadingTime.map(({ post, readingTime }) => (
                <li class="py-4 border-b border-(--color-text-third) dark:border-(--color-text-third-dark) last:border-0">
                    <a href={`/writing/${post.id}`} class="flex flex-col gap-4">

                        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center">
                            <span class="text-base text-(--color-text-second) dark:text-(--color-text-second-dark) hover:text-(--color-accent-light) dark:hover:text-(--color-accent-dark) transition-colors duration-200">
                                {post.data.title}
                            </span>
                            <span class="text-sm text-(--color-text-third) dark:text-(--color-text-third-dark) mt-1 sm:mt-0 flex items-center gap-2">
                                <span>{formatReadingTime(readingTime)}</span>
                                <span>â€¢</span>
                                <time datetime={post.data.published.toISOString()}>
                                    {new Date(post.data.published).toLocaleDateString(undefined, {
                                        year: "numeric",
                                        month: "long",
                                        day: "numeric",
                                    })}
                                </time>
                            </span>
                        </div>
                    </a>
                </li>
            ))
        }
    </ul>
    </div>
</BaseLayout>
