---
import NewTabLink from "./NewTabLink.astro";
---

<nav
    class="mt-8 grid w-full grid-cols-[repeat(4,max-content)] justify-between gap-x-10 border-t border-(--color-divider) pt-8 pb-50 text-base text-(--color-text-second) dark:border-(--color-divider-dark) dark:text-(--color-text-second-dark)"
>
    <div class="space-y-3">
        <div class="font-semibold">Navigation</div>
        <ul class="space-y-2">
            <li>
                <a
                    href="/"
                    class="underline decoration-transparent underline-offset-4 hover:decoration-current hover:text-(--color-accent-light) dark:hover:text-(--color-accent-dark)"
                >
                    Home
                </a>
            </li>
            <li>
                <a
                    href="/writing"
                    class="underline decoration-transparent underline-offset-4 hover:decoration-current hover:text-(--color-accent-light) dark:hover:text-(--color-accent-dark)"
                >
                    Writing
                </a>
            </li>
            <li>
                <a
                    href="/project"
                    class="underline decoration-transparent underline-offset-4 hover:decoration-current hover:text-(--color-accent-light) dark:hover:text-(--color-accent-dark)"
                >
                    Projects
                </a>
            </li>
            <li>
                <a
                    href="/about"
                    class="underline decoration-transparent underline-offset-4 hover:decoration-current hover:text-(--color-accent-light) dark:hover:text-(--color-accent-dark)"
                >
                    About
                </a>
            </li>
        </ul>
    </div>

    <div class="space-y-3">
        <div class="font-semibold">Site Info</div>
        <ul class="space-y-2">
            <li>
                <a
                    href="/license"
                    class="underline decoration-transparent underline-offset-4 hover:decoration-current hover:text-(--color-accent-light) dark:hover:text-(--color-accent-dark)"
                >
                    License
                </a>
            </li>
            <li>
                <a
                    href="/privacy"
                    class="underline decoration-transparent underline-offset-4 hover:decoration-current hover:text-(--color-accent-light) dark:hover:text-(--color-accent-dark)"
                >
                    Privacy policy
                </a>
            </li>
            <li>
                <a
                    href="/cookie"
                    class="underline decoration-transparent underline-offset-4 hover:decoration-current hover:text-(--color-accent-light) dark:hover:text-(--color-accent-dark)"
                >
                    Cookie policy
                </a>
            </li>
            <li>
                <NewTabLink href="https://github.com/koichincom/website">
                    Source Code
                </NewTabLink>
            </li>
        </ul>
    </div>

    <div class="space-y-3">
        <div class="font-semibold">Social</div>
        <ul class="space-y-2">
            <li>
                <NewTabLink href="https://x.com/koichincom">
                    X/Twitter
                </NewTabLink>
            </li>
            <li>
                <NewTabLink href="https://github.com/koichincom">
                    GitHub
                </NewTabLink>
            </li>
            <li>
                <NewTabLink href="https://linkedin.com/in/koichincom/">
                    LinkedIn
                </NewTabLink>
            </li>
            <li>
                <a
                    href="/feed"
                    class="underline decoration-transparent underline-offset-4 hover:decoration-current hover:text-(--color-accent-light) dark:hover:text-(--color-accent-dark)"
                >
                    Atom/RSS
                </a>
            </li>
        </ul>
    </div>

    <div class="space-y-3">
        <div class="font-semibold">Contact</div>
        <ul class="space-y-2">
            <li>
                <NewTabLink href="mailto:k@koichin.com">
                    Email
                </NewTabLink>
            </li>
            <li>
                <NewTabLink href="https://signal.me/#eu/hFxJqhdUe_9zSwQs01xjuf6sz9n5Zag3yfHQzxGwPZPL-X863I9DF5QXch7gCsUv">
                    Signal
                </NewTabLink>
            </li>
        </ul>
    </div>
</nav>
