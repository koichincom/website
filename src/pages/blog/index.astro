---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/base.astro";
const blogPosts = await getCollection("blog");
---

<BaseLayout>
    <h1>Blog</h1>
    <ul>
        {
            blogPosts.map((post) => (
                <li>
                    <a href={`/blog/${post.id}`}>{post.data.title}</a>
                </li>
            ))
        }
    </ul>
</BaseLayout>
