---
import BaseLayout from "../layouts/base.astro";
const title = "Koichi Nakayamada";
const h1 = "Koichi Nakayamada";

const birthDate = new Date(2004, 11, 9); // December 9, 2004
const today = new Date();
const age =
    today.getFullYear() -
    birthDate.getFullYear() -
    (today <
    new Date(today.getFullYear(), birthDate.getMonth(), birthDate.getDate())
        ? 1
        : 0);
---

<BaseLayout title={title} h1={h1}>
    <p class="mb-8 sm:mb-12 text-base text-(--color-text-second) dark:text-(--color-text-second-dark) leading-relaxed">
        I'm a {age}-years old Data Science student, hacker, and positive-nihilist, born and raised in Japan and currently studying in the States.
        I aim "technical philantropy," which to contribute to humanity through technological works based on the love to the human kind.
        You can find me on <a href="https://x.com/koichincom" class="underline underline-offset-4 hover:text-(--color-accent-light) dark:hover:text-(--color-accent-dark) transition-colors duration-200">X (Twitter).</a>
    </p>
    <div class="mb-8 sm:mb-12">
        <img
            src="https://raw.githubusercontent.com/koichincom/github-stats/master/generated/overview.svg"
            alt="Overview"
            class="block dark:hidden w-full h-auto max-w-2xl mx-auto"
            loading="lazy"
        />
        <img
            src="https://raw.githubusercontent.com/koichincom/github-stats/master/generated/overview.svg"
            alt="Overview (dark)"
            class="hidden dark:block w-full h-auto max-w-2xl mx-auto"
            loading="lazy"
        />
    </div>

    <div class="mb-8 sm:mb-12">
        <img
            src="https://raw.githubusercontent.com/koichincom/github-stats/master/generated/languages.svg"
            alt="Languages"
            class="block dark:hidden w-full h-auto max-w-xl mx-auto"
            loading="lazy"
        />
        <img
            src="https://raw.githubusercontent.com/koichincom/github-stats/master/generated/languages.svg"
            alt="Languages (dark)"
            class="hidden dark:block w-full h-auto max-w-xl mx-auto"
            loading="lazy"
        />
    </div>
</BaseLayout>
