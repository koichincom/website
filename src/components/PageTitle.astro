---
export interface Props {
    inset?: boolean;
    class?: string;
}

const { inset = true, class: className = "" } = Astro.props;
const titleClass = [
    inset && "px-content-inset",
    "text-2xl sm:text-5xl font-bold mb-8",
    className,
]
    .filter(Boolean)
    .join(" ");
---

<h1 class={titleClass}>
    <slot />
</h1>
