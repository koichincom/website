---
import { getCollection, render } from "astro:content";
import WritingLayout from "../../layouts/WritingLayout.astro";
import { getLastUpdatedFromUpdates } from "../../utils/last-updated";
import { getReadingTime } from "../../utils/reading-time";
import NewTabLink from "../../components/NewTabLink.astro";

export async function getStaticPaths() {
    const posts = await getCollection("writing");
    return posts.map((post) => ({
        params: { slug: post.id },
        props: { post },
    }));
}

const { post } = Astro.props;
const { Content } = await render(post);
const readingTime = getReadingTime(post.body || "");
const lastUpdated = getLastUpdatedFromUpdates(post.data.updates);
---

<WritingLayout
    title={post.data.title}
    published={post.data.published}
    lastUpdated={lastUpdated}
    readingTime={readingTime}
>
    <!-- Make NewTabLink component available as a custom tag in MDX globally -->
    <!-- Not clearly documented but it seemingly works for not only HTML tags but also custom MDX components as well -->
    <!-- https://docs.astro.build/en/guides/integrations-guide/mdx/#passing-components-to-mdx-content -->
    <Content components={{ NewTabLink }} />
</WritingLayout>
