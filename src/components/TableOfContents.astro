---
import type { TocHeading } from "../utils/table-of-contents";

export interface Props {
    headings: TocHeading[];
}

const { headings } = Astro.props;
---

<nav
    aria-label="Table of contents"
    class="hidden lg:block lg:sticky lg:top-32 self-start"
>
    <ol class="space-y-2">
        {
            headings.map((heading) => (
                <li>
                    <a
                        href={`#${heading.slug}`}
                        class="text-base text-(--color-text-second) dark:text-(--color-text-second-dark)"
                    >
                        {heading.text}
                    </a>
                </li>
            ))
        }
    </ol>
</nav>
