---
export interface Props {
    href: string;
    class?: string;
    ariaLabel?: string;
    target?: string;
    rel?: string;
}

const {
    href,
    class: className = "",
    ariaLabel,
    target = "_blank",
    rel = "noopener noreferrer",
} = Astro.props;
---

<a
    href={href}
    class={className}
    target={target}
    rel={rel}
    aria-label={ariaLabel}
>
    <span class="inline-flex items-baseline">
        <slot /><span
            class="ml-[0.15em] inline-flex items-center self-center"
            aria-hidden="true"
        >
            <slot name="icon" />
        </span>
    </span>
</a>
