---
import { getCollection, render } from "astro:content";
import SiteInfoLayout from "../layouts/SiteInfoLayout.astro";
import { filterByLang } from "../i18n/utils";
import { DEFAULT_LANG } from "../i18n/config";

export async function getStaticPaths() {
    const allPages = await getCollection("siteInfo");
    const siteInfoPages = filterByLang(allPages, DEFAULT_LANG);
    return siteInfoPages.map((page) => {
        const slug = page.id.replace(/^en\//, "");
        return {
            params: { slug },
            props: { page },
        };
    });
}

const { page } = Astro.props;
const { Content } = await render(page);
---

<SiteInfoLayout
    title={page.data.title}
    h1={page.data.h1}
    effectiveDate={page.data.effectiveDate}
    website={page.data.website}
    owner={page.data.owner}
>
    <Content />
</SiteInfoLayout>
