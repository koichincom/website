---
export interface Props {
    href: string;
    class?: string;
    ariaLabel?: string;
    arrowSize?: string;
}

const {
    href,
    class: className = "",
    ariaLabel,
    arrowSize = "text-[0.75em]",
} = Astro.props;
const linkClass = className;
const arrowClass = [arrowSize].filter(Boolean).join(" ");
---

<a
    href={href}
    class={linkClass}
    target="_blank"
    rel="noopener noreferrer"
    aria-label={ariaLabel}
>
    <slot /><span class={arrowClass} aria-hidden="true">{"\u00A0"}&#8599;</span>
</a>
