---
import { getCollection, render } from "astro:content";
import PostLayout from "../../layouts/PostLayout.astro";
import { getReadingTime } from "../../utils/readingTime";

export async function getStaticPaths() {
    const posts = await getCollection("writing");
    return posts.map((post) => ({
        params: { slug: post.id },
        props: { post },
    }));
}

const { post } = Astro.props;
const { Content } = await render(post);
const readingTime = getReadingTime(post.body || "");
---

<PostLayout
    title={post.data.title}
    h1={post.data.title}
    published={post.data.published}
    lastUpdated={post.data.lastUpdated}
    readingTime={readingTime}
>
    <article
        class="prose prose-base max-w-none dark:prose-invert prose-a:text-inherit prose-a:font-normal prose-a:underline prose-a:underline-offset-4 prose-a:hover:text-(--color-accent-light) dark:prose-a:hover:text-(--color-accent-dark)"
    >
        <Content />
    </article>
</PostLayout>
