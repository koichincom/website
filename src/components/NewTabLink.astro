---
import TrailingIconLink from "./TrailingIconLink.astro";
import NewTabLinkIcon from "./NewTabLinkIcon.astro";

export interface Props {
    href: string;
    class?: string;
    ariaLabel?: string;
    iconClass?: string;
}

const {
    href,
    class: className = "",
    ariaLabel,
    iconClass = "w-[0.9em] h-[0.9em]",
} = Astro.props;
---

<TrailingIconLink href={href} class={className} ariaLabel={ariaLabel}>
    <slot />
    <NewTabLinkIcon slot="icon" class={iconClass} />
</TrailingIconLink>
