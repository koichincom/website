---
import AppendIconInlineText from "./AppendIconInlineText.astro";
import LinkSvg from "../assets/link.svg";

export interface Props {
    href: string;
    class?: string;
    ariaLabel?: string;
    iconClass?: string;
}

const {
    href,
    class: className = "",
    ariaLabel = "Copy link",
    iconClass = "w-[1lh] h-[1lh]",
} = Astro.props;
---

<!-- prettier-ignore -->
<AppendIconInlineText
    href={href}
    class={className}
    ariaLabel={ariaLabel}
    target="_self"
    rel=""
    data-copy-to-clipboard-link
    ><slot /><!--
    --><LinkSvg slot="icon" class={iconClass} /></AppendIconInlineText>
