---
import { getCollection, render } from "astro:content";
import SiteInfoLayout from "../layouts/SiteInfoLayout.astro";
import NewWindow from "../components/NewWindowLink.astro";
import Copy from "../components/CopyToClipboardLink.astro";

export async function getStaticPaths() {
    const siteInfoPages = await getCollection("siteInfo");
    return siteInfoPages.map((page) => ({
        params: { slug: page.id },
        props: { page },
    }));
}

const { page } = Astro.props;
const { Content, headings } = await render(page);
---

<SiteInfoLayout
    title={page.data.title}
    effectiveDate={page.data.effectiveDate}
    headings={headings}
>
    <Content components={{ NewWindow, Copy }} />
</SiteInfoLayout>
