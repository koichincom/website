---
export interface Props {
    href: string;
    class?: string;
    ariaLabel?: string;
    arrowSize?: string;
}

const {
    href,
    class: className = "",
    ariaLabel,
    arrowSize = "text-[0.75em]",
} = Astro.props;
const baseClass =
    "underline decoration-transparent underline-offset-4 hover:decoration-current hover:text-(--color-accent-light) dark:hover:text-(--color-accent-dark)";
const linkClass = [baseClass, className].filter(Boolean).join(" ");
const arrowClass = [arrowSize].filter(Boolean).join(" ");
---

<a
    href={href}
    class={linkClass}
    target="_blank"
    rel="noopener noreferrer"
    aria-label={ariaLabel}
>
    <slot />
    <span class={arrowClass} aria-hidden="true">&#8599;</span>
</a>
