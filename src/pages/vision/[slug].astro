---
import { getCollection, render } from "astro:content";
import PostLayout from "../../layouts/post.astro";

export async function getStaticPaths() {
    const posts = await getCollection("vision");
    return posts.map((post) => ({
        params: { slug: post.id },
        props: { post },
    }));
}

const { post } = Astro.props;
const { Content } = await render(post);

const title = `Vision ${post.data.title}`;
const h1 = post.data.title;
const date = post.data.date;
---

<PostLayout title={title} h1={h1} date={date} showComments={false}>
    <article class="prose prose-base max-w-none dark:prose-invert">
        <Content />
    </article>
</PostLayout>
