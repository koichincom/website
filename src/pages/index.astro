---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import WritingList from "../components/WritingList.astro";
import ProjectList from "../components/ProjectList.astro";
import { filterByLang } from "../i18n/utils";
import { DEFAULT_LANG } from "../i18n/config";

const title = "Koichi Nakayamada";
const h1 = "Koichi Nakayamada";

const birthDate = new Date(2004, 12 - 1, 9); // December 9, 2004, JS months are 0-indexed
const today = new Date();
const age =
    today.getFullYear() -
    birthDate.getFullYear() -
    (today <
    new Date(today.getFullYear(), birthDate.getMonth(), birthDate.getDate())
        ? 1
        : 0);

// Fetch projects sorted by pinned and published date, take featured ones
const allProjects = await getCollection("projects");
const projects = filterByLang(allProjects, DEFAULT_LANG)
    .filter((project) => project.data.featured)
    .sort((a, b) => {
        const pinnedDelta =
            Number(b.data.pinned ?? false) - Number(a.data.pinned ?? false);
        if (pinnedDelta !== 0) return pinnedDelta;
        return (
            new Date(b.data.published).getTime() -
            new Date(a.data.published).getTime()
        );
    });

// Fetch writing posts sorted by published date (newest first), take latest 5
const allPosts = await getCollection("writing");
const writingPosts = filterByLang(allPosts, DEFAULT_LANG)
    .sort(
        (a, b) =>
            new Date(b.data.published).getTime() -
            new Date(a.data.published).getTime(),
    )
    .slice(0, 5);
---

<BaseLayout title={title} h1={h1}>
    <section class="mb-20">
        <p
            class="mb-8 sm:mb-12 text-base text-(--color-text-second) dark:text-(--color-text-second-dark) leading-relaxed"
        >
            I'm a {age}-year-old Japanese data science student and open-source
            developer, currently studying in the United States. I aspire to
            practice "technical philanthropy" which is to contribute to humanity
            through technology, driven by a genuine love for humankind.
        </p>
    </section>

    <section class="mb-20">
        <div class="flex items-center justify-between mb-6">
            <h2
                class="text-lg font-semibold text-(--color-text-first) dark:text-(--color-text-first-dark)"
            >
                Featured Projects
            </h2>
            <a
                href="/project"
                class="text-base text-(--color-text-third) dark:text-(--color-text-third-dark) underline decoration-transparent underline-offset-4 hover:decoration-current hover:text-(--color-accent-light) dark:hover:text-(--color-accent-dark)"
            >
                All projects
            </a>
        </div>
        <ProjectList projects={projects} />
    </section>

    <section class="mb-20">
        <div class="flex items-center justify-between mb-6">
            <h2
                class="text-lg font-semibold text-(--color-text-first) dark:text-(--color-text-first-dark)"
            >
                Latest Writing
            </h2>
            <a
                href="/writing"
                class="text-base text-(--color-text-third) dark:text-(--color-text-third-dark) underline decoration-transparent underline-offset-4 hover:decoration-current hover:text-(--color-accent-light) dark:hover:text-(--color-accent-dark)"
            >
                All writing
            </a>
        </div>
        <WritingList posts={writingPosts} />
    </section>
</BaseLayout>
