// filepath: /Users/koichi/Projects/my-website/src/components/header.astro
const currentPath = Astro.url.pathname;
---

<nav>
    <!-- Only show links to other pages, not the current page -->
    {currentPath !== "/" && <a href="/">[h] Home</a>}
    {currentPath !== "/blog" && <a href="/blog">[b] Blog</a>}
    {currentPath !== "/proj" && <a href="/proj">[p] Projects</a>}
    {currentPath !== "/me" && <a href="/me">[m] About Me</a>}
    <select name="theme">
        <option value="auto">Auto</option>
        <option value="light">Light</option>
        <option value="dark">Dark</option>
    </select>
</nav>
